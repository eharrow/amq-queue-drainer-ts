{
  "compilerOptions": {
    "outDir": "dist/",
    "allowJs": true,
    "target": "es6",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "incremental": true,
    "declaration": true,
  },
  "include": [
    "src/**/*",
    "src/**/*.json",
  ],
  "eslint.autoFixOnSave": true,
  "eslint.validate": [
    "javascript",
    { "language": "typescript", "autoFix": true },
  ],
}
